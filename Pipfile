[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[scripts]
start = "python src/index.py"
build = "python src/build.py"
lint = "pylint src"
format = "autopep8 --in-place --recursive src"
test = "pytest"
coverage = "coverage run -m pytest"
coverage-report = "coverage report -m"

[dev-packages]
autopep8 = "*"

[packages]
pylint = "*"
pep8 = "*"
pytest = "*"
pytest-dotenv = "*"
coverage = "*"

[requires]
